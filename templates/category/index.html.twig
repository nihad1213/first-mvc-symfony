{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between mb-3">
        <h1>Categories</h1>
        <a href="{{ path('app_category_create') }}" class="btn btn-success">
            Create Category
        </a>
    </div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Operations</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.createdAt|date('Y-m-d H:i') }}</td>
                <td>{{ category.updatedAt|date('Y-m-d H:i') }}</td>
                <td>
                    <a href="{{ path('app_category_edit', {id: category.id}) }}"
                       class="btn btn-sm btn-primary">
                        Update
                    </a>

                    <form action="{{ path('app_category_delete', {id: category.id}) }}"
                          method="post"
                          style="display:inline-block"
                          onsubmit="return confirm('Are you sure?');">
                        <input type="hidden" name="_token"
                               value="{{ csrf_token('delete' ~ category.id) }}">
                        <button class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">No categories found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
